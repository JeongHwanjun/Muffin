.SpeechBubble {
    background-image-slice: 10 15 10 10; /* 9-sliced 적용 (상, 우, 하, 좌) */
    background-repeat: stretch; /* 9-sliced를 늘리도록 설정 */
    background-size: cover;
    padding: 10px; /* 내부 여백 */
    display: flex;
    flex-direction: row; /* 이미지와 텍스트가 좌우로 정렬 */
    align-items: center;
    justify-content: center;
    width: auto;
    height: auto;
    border-radius: 5px; /* 둥근 말풍선 모양 */
}

.CakeImage {
    width: 50px;
    height: 50px;
}
